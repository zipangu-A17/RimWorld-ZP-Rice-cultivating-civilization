	<RecipeDef>
		<defName>MakeR_Manger10</defName>
		<label>飼い葉(10)</label>
		<description>藁と米ぬか、穀物をあわせて動物の飼料(高栄養素)を作る。</description>
		<jobString>飼い葉を作る</jobString>
		<workAmount>200</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Straw</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RiceBran</li>
					</thingDefs>
				</filter>
				<count>1.0</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RawRice</li>
						<li>RawCorn</li>
						<li>RawPotatoes</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<products>
			<Manger>10</Manger>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Straw</li>
				<li>RawRice</li>
				<li>RawCorn</li>
				<li>RawPotatoes</li>
				<li>RiceBran</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>1</minLevel>
			</li>
		</skillRequirements>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
	</RecipeDef>
