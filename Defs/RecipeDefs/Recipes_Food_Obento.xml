<ThingDefs>
	<!--============  手の込んだ食事 日の丸弁当 ============-->
	<RecipeDef>
		<defName>CookBRBento4</defName>
		<label>玄米 日の丸弁当(4)</label>
		<description>日の丸弁当を４個作る</description>
		<jobString>日の丸弁当を作る</jobString>
		<workSkill>Cooking</workSkill>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<workAmount>2300</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BrownRice</li>
					</thingDefs>
				</filter>
				<count>0.5</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>0.5</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
				</filter>
				<count>1.0</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Seasoning</li>
					</categories>
				</filter>
				<count>0.01</count>
			</li>
		</ingredients>
		<products>
			<BR_Bento>4</BR_Bento>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BrownRice</li>
			</thingDefs>
			<categories>
				<li>PlantFoodRaw</li>
				<li>MeatRaw</li>
				<li>AnimalProductRaw</li>
				<li>Seasoning</li>
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<exceptedCategories>
				<li>EggsFertilized</li>
			</exceptedCategories>
			<exceptedThingDefs>
				<li>Human_Meat</li>
				<li>Megaspider_Meat</li>
				<li>InsectJelly</li>
				<li>R_Syrup</li>
			</exceptedThingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>6</minLevel>
			</li>
		</skillRequirements>
	</RecipeDef>
