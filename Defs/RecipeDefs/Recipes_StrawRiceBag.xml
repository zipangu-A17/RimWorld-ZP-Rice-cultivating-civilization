	<RecipeDef>
		<defName>MakeStrawRiceBag_RawRice</defName>
		<label>米俵(米)を作る</label>
		<description>米(生)を300個保管できて、特産品として売れる。\n！！注意！！　気密性が悪いのでほどく時に中身が減ります。</description>
		<jobString>俵に米をつめる</jobString>
		<workAmount>1000</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawRice</li>
					</thingDefs>
				</filter>
				<count>300</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Straw</li>
					</thingDefs>
				</filter>
				<count>100</count>
			</li>
		</ingredients>
		<products>
			<StrawRiceBag_RawRice>1</StrawRiceBag_RawRice>
		</products>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>6</minLevel>
			</li>
		</skillRequirements>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawRice</li>
				<li>Straw</li>
			</thingDefs>
		</fixedIngredientFilter>
		<workSkillLearnFactor>0.3</workSkillLearnFactor>
	</RecipeDef>
