<?xml version="1.0" encoding="utf-8"?>
<RecipeDefs>
	<RecipeDef>
		<defName>CookPuffedRice5</defName>
		<label>ポン菓子(2)</label>
		<description>米に圧力をかけた後に一気に解放することによって膨らませる。</description>
		<jobString>ポン菓子を作る</jobString>
		<workSkill>Cooking</workSkill>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_PuffedRice</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<workAmount>2500</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WhiteRice</li>
						<li>BrownRice</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>R_Syrup</li>
					</thingDefs>
				</filter>
				<count>0.02</count>
			</li>
		</ingredients>
		<products>
			<R_PuffedRice>2</R_PuffedRice>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WhiteRice</li>
				<li>BrownRice</li>
				<li>R_Syrup</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>10</minLevel>
			</li>
		</skillRequirements>
	</RecipeDef>
</RecipeDefs>
