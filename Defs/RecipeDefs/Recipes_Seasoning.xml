<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
	<!--============  調味料  ============-->
	<RecipeDef>
		<defName>R_CookNaturalSalt</defName>
		<label>天然塩(10)</label>
		<description>塩分を含んだ水を煮詰めて塩を抽出する。</description>
		<jobString>塩を抽出する。</jobString>
		<workSkill>Cooking</workSkill>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<targetCountAdjustment>10</targetCountAdjustment>
		<workAmount>2500</workAmount>
		<products>
			<R_NaturalSalt>10</R_NaturalSalt>
		</products>
	</RecipeDef>
	<RecipeDef>
		<defName>R_CookSyrup10</defName>
		<label>米飴(10)</label>
		<description>米を煮詰めて糖化させ米飴を作る</description>
		<jobString>米飴を作る</jobString>
		<workSkill>Cooking</workSkill>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<workAmount>2500</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>JP_Rice</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<R_Syrup>10</R_Syrup>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>JP_Rice</li>
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<exceptedThingDefs>
				<li>WhiteRice</li>
			</exceptedThingDefs>
		</defaultIngredientFilter>
	</RecipeDef>
</ThingDefs>
