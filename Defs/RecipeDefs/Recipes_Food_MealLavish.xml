<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
	<!--============  豪華な食事　カレーライス  ============-->
	<RecipeDef>
		<defName>CookWRJPCurryRice8</defName>
		<label>カレーライス(8)</label>
		<description>カレーライスを8個作る</description>
		<jobString>カレーライスを作る</jobString>
		<workSkill>Cooking</workSkill>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<workAmount>5120</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WhiteRice</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
				</filter>
				<count>4</count>
			</li>
		</ingredients>
		<products>
			<WR_JPCurryRice>8</WR_JPCurryRice>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WhiteRice</li>
			</thingDefs>
			<categories>
				<li>PlantFoodRaw</li>
				<li>MeatRaw</li>
				<li>AnimalProductRaw</li>
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<exceptedCategories>
				<li>EggsFertilized</li>
			</exceptedCategories>
			<exceptedThingDefs>
				<li>Human_Meat</li>
				<li>Megaspider_Meat</li>
				<li>InsectJelly</li>
			</exceptedThingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>12</minLevel>
			</li>
		</skillRequirements>
	</RecipeDef>
</ThingDefs>
