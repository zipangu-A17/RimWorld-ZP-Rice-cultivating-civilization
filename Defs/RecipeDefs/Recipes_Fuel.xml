	<RecipeDef>
		<defName>MakeMomigalite10</defName>
		<label>モミガライト(10)</label>
		<description>籾殻を燃料に加工する</description>
		<jobString>モミガライトを作る</jobString>
		<workAmount>250</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chaff</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
		</ingredients>
		<products>
			<Momigalite>10</Momigalite>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Chaff</li>
			</thingDefs>
			<specialFiltersToDisallow>
				<li>AllowRotten</li>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
	</RecipeDef>
