			<linkType>Basic</linkType>
			<linkFlags>
				<li>Sandbags</li>
			</linkFlags>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<minifiedDef>
		</minifiedDef>
		<blueprintGraphicData>
			<texPath>Things/Building/Linked/Sandbags_Blueprint_Atlas</texPath>
		</blueprintGraphicData>
		<uiIconPath>Things/Buildings/PaddyField</uiIconPath>
		<pathCost>30</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>
		<fillPercent>0.30</fillPercent>
		<statBases>
			<WorkToBuild>2000</WorkToBuild>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0.1</Flammability>
			<Cleanliness>-10</Cleanliness>
		</statBases>
		<tickerType>Rare</tickerType>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<costList>
			<WoodLog>30</WoodLog>
			<R_Smoldering>30</R_Smoldering>
			<R_Compost>30</R_Compost>
		</costList>
		<fertility>1.4</fertility>
		<building>
			<defaultPlantToGrow>WetlandRice</defaultPlantToGrow>
			<sowTag>R_PaddyField</sowTag>
		</building>
		<researchPrerequisites><li>ReWetlandRice</li></researchPrerequisites>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<DesignationCategory>Zipangu</DesignationCategory>
	</ThingDef>
</ThingDefs>
