<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
	<ThingDef ParentName="BuildingBase">
		<defName>PaddyField</defName>
		<label>水田</label>
		<description>水稲を育てることが出来る水田。肥沃度200%\n泥,湿地,浅瀬にしか設置できないが豊富な水分と栄養素があるため、汎用型に比べると高性能です。</description>
		<thingClass>Building_PlantGrower</thingClass>
		<graphicData>
			<texPath>Things/Buildings/PaddyFieldr_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Sandbags</li>
			</linkFlags>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<minifiedDef>
		</minifiedDef>
		<blueprintGraphicData>
			<texPath>Things/Building/Linked/Sandbags_Blueprint_Atlas</texPath>
		</blueprintGraphicData>
		<uiIconPath>Things/Buildings/PaddyField</uiIconPath>
		<pathCost>40</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>
		<fillPercent>0.30</fillPercent>
		<statBases>
			<WorkToBuild>1500</WorkToBuild>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0.1</Flammability>
			<Cleanliness>-10</Cleanliness>
		</statBases>
		<tickerType>Rare</tickerType>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<costList>
			<WoodLog>20</WoodLog>
			<R_Smoldering>20</R_Smoldering>
			<R_Compost>20</R_Compost>
		</costList>
		<fertility>2.0</fertility>
		<building>
			<defaultPlantToGrow>WetlandRice</defaultPlantToGrow>
			<sowTag>R_PaddyField</sowTag>
		</building>
		<researchPrerequisites><li>ReWetlandRice</li></researchPrerequisites>
		<terrainAffordanceNeeded>Undefined</terrainAffordanceNeeded>
		<DesignationCategory>Zipangu</DesignationCategory>
	</ThingDef>
