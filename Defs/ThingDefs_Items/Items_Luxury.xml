<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--=============== Luxury ====================-->
	<ThingDef ParentName="ResourceBase">
		<defName>R_PuffedRice</defName>
		<label>ポン菓子</label>
		<description>米に圧力をかけた後に一気に開放することによって膨らませた、サクサクした食感の駄菓子です。</description>
		<graphicData>
			<texPath>Things/Food/pongasi</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<socialPropernessMatters>true</socialPropernessMatters>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<MarketValue>6</MarketValue>
			<Mass>0.075</Mass>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>8</DeteriorationRate>
		</statBases>
		<thingCategories>
			<li>Foods</li>
		</thingCategories>
		<ingestible>
			<preferability>DesperateOnly</preferability>
			<foodType>Processed</foodType>
			<nutrition>0.1</nutrition>
			<joy>0.15</joy>
			<joyKind>Gluttonous</joyKind>
			<maxNumToIngestAtOnce>4</maxNumToIngestAtOnce>
			<ingestSound>Meal_Eat</ingestSound>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>HedPuffedRice</hediffDef>
					<severity>0.1</severity>
				</li>
			</outcomeDoers>
		</ingestible>
	</ThingDef>
</Defs>
