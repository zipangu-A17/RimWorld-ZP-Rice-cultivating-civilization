<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<HediffDef>
		<defName>HedMochi</defName>
		<label>【速】モチパワー</label>
		<initialSeverity>1</initialSeverity>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1.0</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>餅を食べた</label>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>HedMochi2</defName>
		<label>【技】モチパワー</label>
		<initialSeverity>1</initialSeverity>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1.0</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>餅を食べた</label>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>HedPuffedRice</defName>
		<label>私の体に爆発力が宿る！！</label>
		<initialSeverity>1</initialSeverity>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1.0</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>ポン菓子を食べた</label>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.5</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>
